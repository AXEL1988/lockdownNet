<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <PublishSingleFile>false</PublishSingleFile>
  </PropertyGroup>

   <PropertyGroup>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>lockdown-test</ToolCommandName>
    <PackageOutputPath>./nupkg</PackageOutputPath>

    <PackageId>Lockdown.Net</PackageId>
    <AssemblyVersion>0.0.7</AssemblyVersion>
    <Version>0.0.7</Version>

    <Authors>Edison Fern√°ndez</Authors>
    <Title>Lockdown Net</Title>
    <PackageDescription>A static website generator</PackageDescription>
    <Description>A static website generator</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/AXEL1988/lockdownNet/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/AXEL1988/lockdownNet/</RepositoryUrl>
    <!-- <PackageIcon>icon.png</PackageIcon> -->
    <PackageTags>static;static-website;website;website-generator;html;jekyll;hugo</PackageTags>

  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DotLiquid" Version="2.1.436" />
    <PackageReference Include="McMaster.Extensions.CommandLineUtils" Version="3.1.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="5.0.1" />
    <PackageReference Include="Slugify.Core" Version="3.0.0" />
    <PackageReference Include="StyleCop.Analyzers" Version="1.1.118">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="System.IO.Abstractions" Version="13.2.33" />
  </ItemGroup>

  <PropertyGroup>
    <CodeAnalysisRuleSet>../style.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <PlatformTarget>x64</PlatformTarget>
  </PropertyGroup>
</Project>
